<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>
  <servlet>
    <servlet-name>AddServlet</servlet-name>
    <servlet-class>com.kgc.web.servlet.AddServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.kgc.web.servlet.DeleteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.kgc.web.servlet.LoginServlet</servlet-class>
  </servlet>
  <filter>
  	<filter-name>charFilter</filter-name>
  	<filter-class>com.kgc.web.filter.CharEncodingFilter</filter-class>
  </filter>
  <filter>
  	<filter-name>loginFilter</filter-name>
  	<filter-class>com.kgc.web.filter.LoginFilter</filter-class>
  </filter>

	<filter-mapping>
  	<filter-name>loginFilter</filter-name>
  	<url-pattern>/jsp/admin/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>AddServlet</servlet-name>
    <url-pattern>/servlet/AddServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/servlet/DeleteServlet</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>	
  <filter-mapping>
  	<filter-name>charFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
